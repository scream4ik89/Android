<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.itacademy.homework">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".homework_switch.SwitcherActivity"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".homework1.HomeWork1Activity"
            android:parentActivityName=".homework_switch.SwitcherActivity"
            />
        <activity
            android:name=".homework2.HomeWork2Activity"
            android:parentActivityName=".homework_switch.SwitcherActivity"
            />
        <activity
            android:name=".homework3.HomeWork3Activity"
            android:parentActivityName=".homework_switch.SwitcherActivity" />
        <activity
            android:name=".homework4.HomeWork4Activity"
            android:parentActivityName=".homework_switch.SwitcherActivity" />
        <activity
            android:name=".homework4.HomeWork4_1Activity"
            android:parentActivityName=".homework4.HomeWork4Activity" />
        <activity
            android:name=".homework4.HomeWork4_2Activity"
            android:parentActivityName=".homework4.HomeWork4Activity" />
    </application>

</manifest>
