<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View">
        </import>

        <variable
            name="viewModel"
            type="com.itacademy.presentation.presentation.screens.homework9.UserViewModel">

        </variable>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="#3772ac"
            android:text="@{viewModel.userName}"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="#3772ac"
            android:gravity="center"
            android:text="@{viewModel.age}"
            android:textSize="25dp" />

        <!--<ImageView-->
            <!--android:id="@+id/profileUrl"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_marginTop="25dp"-->
            <!--android:background="#3de60a"-->
            <!--android:text="@{viewModel.profileUrl}"-->
            <!--android:textAllCaps="false"-->
            <!--android:textSize="15dp" />-->

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="@{viewModel.progressVisible ? View.VISIBLE : View.GONE}" />

    </LinearLayout>
</layout>